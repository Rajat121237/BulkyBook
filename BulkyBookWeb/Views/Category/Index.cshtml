@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<style>
    th{
        text-align:center;
    }

    tbody tr td{
        text-align:center;
    }
</style>

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" asp-controller="Category" class="btn btn-primary"><i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
    </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td style="width:50%;">@obj.Name</td>
                <td style="width:30%;">@obj.DisplayOrder</td>
                <td style="width:30%;">
                    <a class="btn btn-info" asp-controller="category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil"></i>&nbsp; Edit</a>
                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-action="" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>&nbsp; Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{

    <script type="text/javascript">


    </script>
}


